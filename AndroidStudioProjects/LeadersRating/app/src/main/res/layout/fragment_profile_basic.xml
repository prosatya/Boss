<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/profile_cover"
        android:background="@drawable/nav_bakground"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <RelativeLayout

                android:id="@+id/card_view0"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:id="@+id/card1"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginEnd="10dp"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_marginTop="180dp"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    card_view:cardElevation="2dp"
                    card_view:cardCornerRadius="4dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="50dp"
                            android:gravity="center"
                            android:id="@+id/profile_rating_lin"
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/holo_star1"
                                android:clickable="true"
                                android:id="@+id/star1"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>
                            <ImageView
                                android:src="@drawable/holo_star1"
                                android:clickable="true"
                                android:id="@+id/star2"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>
                            <ImageView
                                android:src="@drawable/holo_star1"
                                android:clickable="true"
                                android:id="@+id/star3"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>
                            <ImageView
                                android:src="@drawable/holo_star1"
                                android:clickable="true"
                                android:id="@+id/star4"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>
                            <ImageView
                                android:src="@drawable/holo_star1"
                                android:clickable="true"
                                android:id="@+id/star5"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>

                            <TextView
                                android:id="@+id/profile_rating_text"
                                android:layout_marginStart="10dp"
                                android:text="2.5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:gravity="center"
                                android:text="jkhvbkjhv"
                                android:id="@+id/profile_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:gravity="center"
                                android:text="kjhvbzvjhb"
                                android:id="@+id/profile_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/profile_rate_lin"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <Button
                                android:textSize="12sp"
                                android:textColor="#ffffff"
                                android:text="@string/rate"
                                android:layout_marginEnd="10dp"
                                android:id="@+id/profile_rate"
                                android:background="@drawable/button_background"
                                android:layout_width="70dp"
                                android:elevation="3dp"
                                android:layout_height="35dp"/>
                            <Button
                                android:textSize="12sp"
                                android:textColor="#ffffff"
                                android:text="@string/comment"
                                android:elevation="3dp"
                                android:background="@drawable/button_background"
                                android:id="@+id/profile_comment"
                                android:layout_width="80dp"
                                android:layout_height="35dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_below="@+id/card1"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="30dp"
                    android:layout_marginEnd="10dp"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardElevation="2dp"
                    card_view:cardCornerRadius="6dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/line1"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Basic Details"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <View
                                    android:background="#000000"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"/>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:src="@drawable/contact"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>

                            <TextView
                                android:layout_marginStart="10dp"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:text="test_text"
                                android:id="@+id/profile_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="25dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:src="@drawable/username"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>

                            <TextView
                                android:layout_marginStart="10dp"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:text="test_text"
                                android:id="@+id/profile_username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="25dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:src="@drawable/workname"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>

                            <TextView
                                android:layout_marginStart="10dp"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:text="test_text"
                                android:id="@+id/profile_workname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="25dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:src="@drawable/category"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>

                            <TextView
                                android:layout_marginStart="10dp"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:text="test_text"
                                android:id="@+id/profile_category"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="25dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:src="@drawable/address"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>

                            <TextView
                                android:layout_marginStart="10dp"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:text="test_text"
                                android:id="@+id/profile_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="25dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:src="@drawable/country"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>

                            <TextView
                                android:layout_marginStart="10dp"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:text="test_text"
                                android:id="@+id/profile_country"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="125dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.pkmmte.view.CircularImageView
                    android:elevation="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="10dp"
                    android:id="@+id/profile_picture"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:border="true"
                    app:border_color="#EEEEEE"
                    app:border_width="3dp"/>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
