<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    android:layout_marginTop="58dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Acivity.ActivityMain"
    tools:showIn="@layout/app_bar_activity_main">



    <android.support.v7.widget.CardView
        android:id="@+id/home_find_near_by"
        app:cardElevation="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <View
            android:background="@drawable/nearby"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:background="#40099999"
            android:textColor="#000000"
            android:layout_gravity="bottom"
            android:textAlignment="center"
            android:text="Find Nearby.."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/home_find_near_by"
        android:id="@+id/home_update_my_location"
        app:cardElevation="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <View
            android:background="@drawable/location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:background="#40099999"
            android:textColor="#000000"
            android:layout_gravity="bottom"
            android:textAlignment="center"
            android:text="Locate Me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/home_update_my_location"
        android:id="@+id/home_find_friend"
        app:cardElevation="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <View
            android:background="@drawable/friend_on_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:background="#40099999"
            android:textColor="#000000"
            android:layout_gravity="bottom"
            android:textAlignment="center"
            android:text="Find a Friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

</RelativeLayout>
</ScrollView>